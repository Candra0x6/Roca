{
  "name": "arisan-plus-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Arisan+ decentralized social saving platform",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:all": "./test-all.sh",
    
    "deploy:localhost": "hardhat ignition deploy ignition/modules/Lock.ts --network localhost",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/Lock.ts --network sepolia --verify",
    "deploy:mainnet": "hardhat ignition deploy ignition/modules/Lock.ts --network mainnet --verify",
    
    "deploy:all": "hardhat run scripts/deploy-all-contracts.ts --network localhost",
    "deploy:all:sepolia": "hardhat run scripts/deploy-all-contracts.ts --network sepolia",
    "deploy:all:mainnet": "hardhat run scripts/deploy-production.ts --network mainnet",
    
    "deploy:dev": "hardhat run scripts/deploy-dev.ts --network localhost",
    "deploy:prod": "hardhat run scripts/deploy-production.ts",
    "deploy:badge": "hardhat run scripts/deploy-badge-integration.ts --network localhost",
    
    "deploy:single": "hardhat run scripts/deploy-single.ts --network localhost",
    "deploy:single:sepolia": "hardhat run scripts/deploy-single.ts --network sepolia",
    
    "deployment:list": "npx ts-node scripts/deployment-utils.ts list",
    "deployment:verify": "npx ts-node scripts/deployment-utils.ts verify",
    "deployment:env": "npx ts-node scripts/deployment-utils.ts env",
    
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    
    "node": "hardhat node",
    "node:fork": "hardhat node --fork https://eth-mainnet.alchemyapi.io/v2/$ALCHEMY_API_KEY",
    
    "clean": "hardhat clean",
    "typechain": "hardhat typechain"
  },
  "keywords": [
    "solidity",
    "hardhat",
    "defi",
    "ethereum",
    "arisan",
    "savings"
  ],
  "author": "Arisan+ Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^2.3.0",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@openzeppelin/contracts": "^5.4.0"
  }
}
